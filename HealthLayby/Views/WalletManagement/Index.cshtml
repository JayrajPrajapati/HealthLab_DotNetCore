<!-- Add Bank Modal -->
<div class="modal fade" id="addbank" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered w-550">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="head-type2">Add Bank</h5>
                <button type="button" class="close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row grid-sp15">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <select class="filterdropdown selectpicker w100" title="Choose Your Bank">
                                <option>IFC Bank</option>
                                <option>ICICI Bank</option>
                                <option>HDFC Bank</option>
                                <option>Bank of America</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="has-float-label">
                                <input class="form-control" id="banklocation" type="text" placeholder="Bank Location (Branch)">
                                <label for="banklocation">Bank Location (Branch)</label>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="has-float-label">
                                <input class="form-control" id="bankaccountnumber" type="text" placeholder="Bank Account Number">
                                <label for="bankaccountnumber">Bank Account Number</label>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <span class="has-float-label">
                                <input class="form-control" id="bsbnumber" type="text" placeholder="BSB Number">
                                <label for="bsbnumber">BSB Number</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <a href="Javascript:;" class="btn-type1 loginSubmit" data-dismiss="modal">Add Bank</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Payment Modal -->
<div class="modal fade" id="addpayment" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered w-410">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="head-type2">Add Payment</h5>
                <button type="button" class="close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row grid-sp15">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <select class="filterdropdown selectpicker w100" title="Select Merchant">
                                <option>Merchant Name 1</option>
                                <option>Merchant Name 2</option>
                                <option>Merchant Name 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="has-float-label">
                                <input class="form-control" id="enteramount" type="text" placeholder="Enter Amount" />
                                <label for="enteramount">Enter Amount</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <a href="Javascript:;" data-dismiss="modal" class="btn-type1 loginSubmit">Transfer Amount</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Payment Modal -->
<div class="modal fade" id="withdrawwallet" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered w-410">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="head-type2">Withdraw Wallet</h5>
                <button type="button" class="close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row grid-sp15">
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <select class="filterdropdown selectpicker w100" title="Select Bank">
                                <option>IFC Bank</option>
                                <option>ICICI Bank</option>
                                <option>HDFC Bank</option>
                                <option>Bank of America</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group input-group">
                            <span class="has-float-label">
                                <input class="form-control" id="enteramount" type="text" value="52.00" />
                                <label for="enteramount">Enter Amount</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <a href="Javascript:;" data-dismiss="modal" class="btn-type1 loginSubmit">Withdraw</a>
                </div>
            </div>
        </div>
    </div>
</div>

