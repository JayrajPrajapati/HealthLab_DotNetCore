            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <!-- Custom JS -->
    <script type="text/javascript">
        $(document).ready(function () {
            activeMenu("merchant-wallet");
            removeActiveMenu("merchant-dashboard");

            $('#listtable').DataTable({
                "ordering": true,
                "info": false,
                "dom": 'rtip',
                "columns": [
                    { "width": "30%" },
                    { "width": "30%" },
                    { "width": "15%" },
                    { "width": "10%" },
                ]
            });
        });
    </script>
}